<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <h1 class="card-title text-center mb-4">Funcionários</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Nome de Usuário</th>
                        <th>Email</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each funcionarios}}
                    <tr>
                        <td>{{this.nome}}</td>
                        <td>{{this.nome_usuario}}</td>
                        <td>{{this.email}}</td>
                        <td class="text-center d-flex justify-content-center gap-2">
                            <form action="/funcionarios/edit" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-info">Editar</button>
                            </form>
                            <form action="/funcionarios/delete" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Excluir</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
