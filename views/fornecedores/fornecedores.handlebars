<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <h1 class="card-title text-center mb-4">Fornecedores</h1>

        <form action="/fornecedores/{{#if action}}save{{else}}create{{/if}}" method="post">
            <input type="hidden" name="id" value="{{fornecedor_editing.id}}">

            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome" value="{{fornecedor_editing.nome}}" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{fornecedor_editing.email}}" required>
            </div>

            <div class="mb-3">
                <label for="endereco" class="form-label">Endereço</label>
                <input type="text" class="form-control" id="endereco" name="endereco" value="{{fornecedor_editing.endereco}}" required>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">{{#if action}}Editar{{else}}Criar{{/if}}</button>
        </form>
    </div>

    <hr class="my-5">

    <div class="card p-4 shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Endereço</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each fornecedores}}
                    <tr>
                        <td>{{this.nome}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.endereco}}</td>
                        <td class="text-center d-flex justify-content-center gap-2">
                            <form action="/fornecedores/edit" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-info">Editar</button>
                            </form>
                            <form action="/fornecedores/delete" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Excluir</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
