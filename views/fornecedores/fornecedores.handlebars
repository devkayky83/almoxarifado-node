<h1>Fornecedores</h1>

<form action="/fornecedores/{{#if action}}save{{else}}create{{/if}}" method="post">
    {{!-- <input type="hidden" name="id" value="{{fornecedor_editing.id}}"> --}}

    <label for="nome">Nome</label><br>
    <input type="text" id="nome" name="nome" value="{{fornecedor_editing.nome}}" required><br><br>

    <label for="email">Email</label><br>
    <input type="text" id="email" name="email" value="{{fornecedor_editing.email}}" required><br><br>

    <label for="endereco">Endereço</label><br>
    <input type="text" id="endereco" name="endereco" value="{{fornecedor_editing.endereco}}" required><br><br>


    <button>{{#if action}}Editar{{else}}Criar{{/if}}</button>
</form>

<hr>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Endereço</th>
        </tr>
    </thead>
    <tbody>
        {{#each fornecedores}}
        <tr>
            <td>{{this.nome}}</td>
            <td>{{this.email}}</td>
            <td>{{this.endereco}}</td>
            <td style="display: flex; justify-content: space-evenly;">
                <form action="/fornecedores/edit" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">Editar</button>
                </form>

                <form action="/fornecedores/delete" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">Excluir</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

