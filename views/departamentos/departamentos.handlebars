<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <h1 class="card-title text-center mb-4">Departamentos</h1>

        <form action="/departamentos/{{#if action}}save{{else}}create{{/if}}" method="post">
            {{!-- <input type="hidden" name="id" value="{{departamento_editing.id}}"> --}}
            
            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome" value="{{departamento_editing.nome}}" required>
            </div>

            <div class="mb-3">
                <label for="representante" class="form-label">Representante</label>
                <input type="text" class="form-control" id="representante" name="representante" value="{{departamento_editing.representante}}" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" value="{{departamento_editing.email}}" required>
            </div>

            <div class="mb-3">
                <label for="data_criacao" class="form-label">Data de Criação</label>
                <input type="date" class="form-control" id="data_criacao" name="data_criacao" value="{{departamento_editing.data_criacao}}" required>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">{{#if action}}Editar{{else}}Criar{{/if}}</button>
        </form>
    </div>

    <hr class="my-5">

    <div class="card p-4 shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Representante</th>
                        <th>Email</th>
                        <th>Data de Criação</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each departamentos}}
                    <tr>
                        <td>{{this.nome}}</td>
                        <td>{{this.representante}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.data_criacao}}</td>
                        <td class="text-center d-flex justify-content-center gap-2">
                            <form action="/departamentos/edit" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-info">Editar</button>
                            </form>
                            <form action="/departamentos/delete" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Excluir</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>