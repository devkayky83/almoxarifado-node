<h1>Editar Produto</h1>

<form action="/produtos/save" method="post">
    <input type="hidden" name="id" value="{{produto.id}}">

    <label for="nome">Nome</label><br>
    <input type="text" id="nome" name="nome" value="{{produto.nome}}" required><br><br>

    <label for="tipo">Tipo</label><br>
    <select id="tipo" name="tipo" required>
        <option value="ALIMENTO" {{#ifCond produto.tipo "ALIMENTO"}}selected{{/ifCond}}>Alimento</option>
        <option value="LIMPEZA" {{#ifCond produto.tipo "LIMPEZA"}}selected{{/ifCond}}>Limpeza</option>
        <option value="ESCOLAR" {{#ifCond produto.tipo "ESCOLAR"}}selected{{/ifCond}}>Escolar</option>
        <option value="OUTROS" {{#ifCond produto.tipo "OUTROS"}}selected{{/ifCond}}>Outros</option>
    </select><br><br>

    <label for="quantidade">Quantidade</label><br>
    <input type="number" id="quantidade" name="quantidade" value="{{produto.quantidade}}" required><br><br>

    <label for="data_fabricacao">Data de Fabricação</label><br>
    <input type="date" id="data_fabricacao" name="data_fabricacao" value="{{produto.data_fabricacao}}" required><br><br>

    <label for="data_validade">Data de Validade</label><br>
    <input type="date" id="data_validade" name="data_validade" value="{{produto.data_validade}}" required><br><br>

    <label for="observacoes">Observações</label><br>
    <textarea id="observacoes" name="observacoes">{{produto.observacoes}}</textarea><br><br>

    <button type="submit">Salvar</button>
</form>