<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <h1 class="card-title text-center mb-4">Editar Produto</h1>
        <form action="/produtos/save" method="post">
            <input type="hidden" name="id" value="{{produto.id}}">

            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome" value="{{produto.nome}}" required>
            </div>

            <div class="mb-3">
                <label for="tipo" class="form-label">Tipo</label>
                <select id="tipo" name="tipo" class="form-select" required>
                    <option value="ALIMENTO" {{#ifCond produto.tipo "ALIMENTO"}}selected{{/ifCond}}>Alimento</option>
                    <option value="LIMPEZA" {{#ifCond produto.tipo "LIMPEZA"}}selected{{/ifCond}}>Limpeza</option>
                    <option value="ESCOLAR" {{#ifCond produto.tipo "ESCOLAR"}}selected{{/ifCond}}>Escolar</option>
                    <option value="OUTROS" {{#ifCond produto.tipo "OUTROS"}}selected{{/ifCond}}>Outros</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="quantidade" class="form-label">Quantidade</label>
                <input type="number" class="form-control" id="quantidade" name="quantidade" value="{{produto.quantidade}}" required>
            </div>

            <div class="mb-3">
                <label for="data_fabricacao" class="form-label">Data de Fabricação</label>
                <input type="date" class="form-control" id="data_fabricacao" name="data_fabricacao" value="{{produto.data_fabricacao}}" required>
            </div>

            <div class="mb-3">
                <label for="data_validade" class="form-label">Data de Validade</label>
                <input type="date" class="form-control" id="data_validade" name="data_validade" value="{{produto.data_validade}}" required>
            </div>

            <div class="mb-3">
                <label for="observacoes" class="form-label">Observações</label>
                <textarea id="observacoes" name="observacoes" class="form-control" rows="3">{{produto.observacoes}}</textarea>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
        </form>
    </div>
</div>
